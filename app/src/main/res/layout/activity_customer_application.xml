<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomerApplicationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/loc_text_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Customer Application Form"
                android:textColor="@color/colorWhite" />



        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Application Form"
        android:textSize="25sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#000000"/>



    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <EditText
            android:id="@+id/cust_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:hint="Customer Name*"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:layout_marginStart="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginEnd="10dp"
            android:drawablePadding="5dp"
            android:background="@drawable/custom_edittext" />

        <EditText
            android:id="@+id/cust_address"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:hint="Customer Address*"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawableStart="@drawable/ic_baseline_location_city_24"
            android:layout_marginStart="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginEnd="10dp"
            android:drawablePadding="5dp"
            android:background="@drawable/custom_edittext" />

        <EditText
            android:id="@+id/cust_mob"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:hint="Customer Mobile*"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawableStart="@drawable/ic_baseline_phone_24"
            android:layout_marginStart="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:inputType="number"
            android:maxLength="10"
            android:layout_marginEnd="10dp"
            android:drawablePadding="5dp"
            android:background="@drawable/custom_edittext" />


        <EditText
            android:id="@+id/cust_dob"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:hint="Date of Birth*"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawableStart="@drawable/ic_baseline_calendar_today_24"
            android:layout_marginStart="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginEnd="10dp"
            android:focusable="false"
            android:drawablePadding="5dp"
            android:background="@drawable/custom_edittext" />

        <!--    <EditText-->
        <!--        android:id="@+id/cust_nationality"-->
        <!--        android:layout_width="match_parent"-->
        <!--        android:layout_height="45dp"-->
        <!--        android:layout_marginTop="20dp"-->
        <!--        android:hint="Nationality"-->
        <!--        android:paddingStart="10dp"-->
        <!--        android:paddingEnd="10dp"-->
        <!--        android:drawableStart="@drawable/ic_baseline_location_city_24"-->
        <!--        android:layout_marginStart="20dp"-->
        <!--        android:paddingTop="5dp"-->
        <!--        android:paddingBottom="5dp"-->
        <!--        android:layout_marginEnd="10dp"-->
        <!--        android:drawablePadding="5dp"-->
        <!--        android:background="@drawable/custom_edittext" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="20dp"
                android:gravity="center"/>

            <RadioGroup
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:checkedButton="@id/gender_male"
                android:layout_height="wrap_content">



                    <RadioButton
                        android:id="@+id/gender_male"
                        android:layout_width="wrap_content"
                        android:text="Male"
                        android:buttonTint="#000000"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/gender_female"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:text="Female"
                        android:buttonTint="#000000"
                        android:layout_height="wrap_content" />



            </RadioGroup>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="5dp"
            android:background="@color/colorPrimaryDark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documents Proof :"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/img_address_proof"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="20dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address Proof*"
                    android:textSize="15sp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/colorPrimaryDark"

                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Voter Id, Driving License,"
                    android:textSize="12sp"
                    android:layout_marginStart="20dp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tel. Bill No, etc)"
                    android:textSize="12sp"
                    android:layout_marginStart="20dp"
                    android:textColor="#000000"
                    android:gravity="center"/>


            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/choose_address_proof"
                android:layout_width="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                app:background="@color/colorPrimaryDark"
                app:cornerRadius="20dp"
                android:paddingStart="20dp"
                android:layout_marginEnd="25dp"
                android:paddingEnd="20dp"
                android:text="Browse"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_photo_id"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo ID*"
                    android:textSize="15sp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Voter Id, Driving License,"
                    android:textSize="12sp"
                    android:layout_marginStart="20dp"
                    android:textColor="#000000"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aadhar Card, Pan Card)"
                    android:textSize="12sp"
                    android:layout_marginStart="20dp"
                    android:textColor="#000000"
                    android:gravity="center"/>


            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/choose_photo_id"
                android:layout_width="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                app:background="@color/colorPrimaryDark"
                app:cornerRadius="20dp"
                android:paddingStart="20dp"
                android:layout_marginEnd="25dp"
                android:paddingEnd="20dp"
                android:text="Browse"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"

            app:cornerRadius="20dp"
            android:paddingStart="30dp"
            android:layout_marginEnd="25dp"
            android:enabled="false"
            android:shadowColor="@color/colorPrimaryDark"
            android:paddingEnd="30dp"
            android:text="Submit"
            android:textColor="@color/colorAccent" />




    </LinearLayout>



    </ScrollView>


</LinearLayout>